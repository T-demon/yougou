<!--pages/category/index.wxml-->
<top/>
<search/>
<view class="category">

  <view class="menu">
    <view class="menu-item {{ current === index ? 'active': ''}}" 
    wx:for="{{list}}" 
    wx:key="index"
    bindtap="handleChange"
    data-index="{{index}}"
    >
      {{item.cat_name}}
      </view>
  </view>

  <view class="right" >
  <view class="context" wx:for="{{list[current].children}}" wx:key="index">
      <view class="title">/{{item.cat_name}}/</view>
    <view class="brand">
      <navigator url="" class="item" wx:for="{{item.children}}" wx:key="index">
          <image src="{{item.cat_icon}}"></image>
          <view class="item-text">{{item.cat_name}}</view>
      </navigator>
    </view>
</view>
  </view>
</view>