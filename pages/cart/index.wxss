.page,.main{
  background-color: #f5f5f5
}
.address{
  background: #fff;
}

.address-info{
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  padding-right:100rpx;
  position: relative;
  font-size: 14px;
}

.address-info::after{
  display: block;
  content: "";
  position: absolute;
  right:25rpx;
  top:35rpx;
  width:16rpx;
  height: 16rpx;
  border-top:1px #666 solid;
  border-right:1px #666 solid;
  transform: rotate(45deg)
}


.address-text{
  padding:20rpx;
  padding-top:0;
  font-size: 14px;
}

.border{
  display: block;
  width:100%;
  height:15rpx;
}

.cart-title{
  display: flex;
  padding:0 20rpx;
  height:100rpx;
  line-height: 100rpx;
  align-items: center;
  border-top:20rpx #eee solid;
  border-bottom:1px #ddd solid;
  background: #fff;
}

.cart-title .iconfont{
  color:#999;
  margin-right:10rpx;
}




/* 商品列表 */
.goods-item{
  display: flex;
  background: #fff;
}

.goods-item .selected{
  width: 80rpx;
  font-size: 10rpx;
  display:flex;
  justify-content: center;
  align-items: center;
}

.goods-item .goods-info{
  flex: 1;
  display: flex;
  padding:20rpx;
  border-bottom:1px #ddd solid;
}

.goods-item .goods-info image{
  width: 150rpx;
  height:150rpx;
  margin-right:20rpx;
  flex-shrink: 0;
}

.goods-item .goods-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex:1;
}

.goods-item .goods-title{
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-item .goods-right-btm{
  width:100%;
  display: flex;
  justify-content: space-between;
}

.goods-item .goods-price{
  color:red;
}
  
  .goods-numbers{
  display: flex;
}

.goods-numbers text{
  line-height: 50rpx;
  margin:0 30rpx;
  font-size: 12px;
}

.goods-number-btn{
  width:50rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align: center;
  border:1px #999 solid;
  color:#999;
  border-radius: 2px;
}

.footer{
  display: flex;
  position: fixed;
  bottom: 0;
  font-size: 14px;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}
.footer .icon{
  margin-left: 15rpx;
  display: flex;
  align-items: center;

}
.footer .resolve{
  background-color:  #EB4450;
  height: 100%;
  width: 230rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
}
