/**index.wxss**/

.top{
  display: flex;
  justify-content: center;
  height: 128rpx;
  background-color: #EB4450;
}
.top_title{
  margin-top:63rpx;
  color: white;
  font-size: 38rpx;
}
.header{
  background-color: #EB4450;
  padding: 20rpx 16rpx ;
}
.header-input{
  height: 60rpx;
  border: 1px solid white;
  background-color:white;
  border-radius: 10rpx;
}

.page-section image{
  height: 100%;
}

.menus{
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.menus image{
  width: 100rpx;
  height: 100rpx;
}

.floor-title image{
  width:100%;
  height: 60rpx;
}


.floor{
  display: flex;
  justify-content: space-between;
  padding:16rpx;
}

.floor .left image{
  width: 232rpx;
  height: 390rpx;
}

.floor .right{
  flex:1;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-left: 20rpx;
}

.floor .right image{
  width:230rpx;
  height: 190rpx;
}

